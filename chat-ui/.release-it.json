{
  "git": {
    "tag": false,
    "push": true,
    "tagName": "${packageName}-v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "releaseName": "${packageName}-v${version}",
    "draft": true,
    "release": true
  },
  "hooks": {
    "before:init": ["git pull", "npm run build", "npm run lint", "npm run test"]
  }
}
