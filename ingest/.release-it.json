{
  "git": {
    "commitArgs": ["-a"],
    "commitMessage": "Release mongodb-rag-ingest v${version}",
    "tag": true,
    "push": true,
    "pushRepo": "upstream",
    "tagName": "mongodb-rag-ingest-v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "releaseName": "mongodb-rag-ingest-v${version}",
    "draft": true,
    "release": true
  },
  "hooks": {
    "before:init": [
      "pushd ../chat-core && npm i && npm run build && popd",
      "npm run build"
    ]
  }
}
